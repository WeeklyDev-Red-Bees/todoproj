<!DOCTYPE html>
<html>
	<head>
		<title><%= title %></title>
		<% include ./partials/head %>
	</head>
	<body>
		<section class="top">
			<div class="container">
				<div class="row">
					<div class="col-xs-12 col-sm-5 col-sm-offset-3">
					<div class="logo"><img src="../img/logo.png"></div>
						<h1><%= title %></h1>
						<p>Welcome to the <%= title %></p>
					</div>
				</div>
			</div>
		</section>
		<section class="main">
			<div class="container">
				<div class="row">
					<div class="col-xs-12 col-sm-5 col-sm-offset-3">
						<div class="content">
							<div class="signup">
							<h2>Sign up:</h2>
								<form>
									<div class="form-group">
										<label for="email">Email address</label>
										<input type="email" class="form-control" id="email" placeholder="Email">
									</div>
									<div class="form-group">
										<label for="password">Password</label>
										<input type="password" class="form-control" id="password" placeholder="Password">
									</div>
									<button type="submit" class="btn submit">Submit</button>
								</form>
							</div>
							<div class="login">
								<h2>Sign in:</h2>
								<div class="social">
									<button class="btn facebook"><i class="icon-facebook"></i> Facebook</button>
									<button class="btn twitter"><i class="icon-twitter"></i> Twitter</button>
									<button class="btn gplus"><i class="icon-google-plus"></i> Google +</button>
									<button class="btn github"><i class="icon-github"></i> Github</button>
								</div>
							</div>
						</div>
						<div class="task-list">
							<ul>
							<% var arr = ['red', 'orange', 'yellow', 'green', 'blue', 'purple'];
								for (var i = 0; i < arr.length; i++) { %>
								<li class="task <%= arr[i] %> clearfix">
									<div class="check">
										<div class="checkbox checkbox-circle">
											<input type="checkbox" id="checkbox<%= i+1 %>">
											<label for="checkbox<%= i+1 %>"></label>
										</div>
									</div>
									<div class="info">
										<div class="title">
											Pick up Dry Cleaning
										</div>
										<div class="desc">
											<p>Ticket #24, at Al's Drycleaning. Ticket #24, at Al's Drycleaning. Ticket #24, at Al's Drycleaning. Ticket #24, at Al's Drycleaning.</p>
											<div class="ui-panel">
												<i class="icon-star red"></i> <i class="icon-star orange"></i> <i class="icon-star yellow"></i> <i class="icon-star green"></i> <i class="icon-star blue"></i> <i class="icon-star purple"></i><i class="icon-trash"></i>
											</div>
										</div>
									</div>
								</li>
							<% } %>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</section>
		<% include ./partials/footer %>
	</body>
</html>
